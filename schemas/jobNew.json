{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "salary": {
            "$id": "#/properties/salary",
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "$id": "#/properties/equity",
            "type": "string"
        },
        "companyHandle": {
            "$id": "#/properties/companyHandle",
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "companyHandle"
    ]
}